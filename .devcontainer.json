{
	"image": "ghcr.io/shopwarelabs/devcontainer/symfony-flex:6.6.8-8.3",
	"workspaceFolder": "/var/www/html",
	"overrideCommand": false,
	"updateRemoteUserUID": true,
	"portsAttributes": {
		"8000": {
			"label": "Shopware",
			"onAutoForward": "notify"
		},
		"8080": {
			"label": "Administration Watcher",
			"onAutoForward": "notify"
		}
	},
	"onCreateCommand": "wait-for-mysql && php bin/console plugin:refresh && php bin/console plugin:install --activate FroshTools"
}
