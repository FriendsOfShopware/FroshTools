<sw-card-view>
    <sw-card :title="$tc('frosh-tools.tabs.logs.title')" :isLoading="isLoading" :large="true">
        <sw-single-select
            :options="logFiles"
            labelProperty="name"
            valueProperty="name"
            v-model="selectedLogFile"
            @change="onFileSelected"
        ></sw-single-select>

        <template #toolbar>
            <!-- @todo: Make the refresh button fancy -->
            <sw-button variant="ghost" @click="refresh"><sw-icon :small="true" name="default-arrow-360-left"></sw-icon></sw-button>
        </template>

        <sw-data-grid
            :showSelection="false"
            :showActions="false"
            :dataSource="logEntries"
            :columns="columns">
        </sw-data-grid>

        <sw-pagination
            :total="totalLogEntries"
            :limit="limit"
            :page="page"
            @page-change="onPageChange"
        ></sw-pagination>
    </sw-card>
</sw-card-view>
