<sw-card-view>
    <mt-card
            class="frosh-tools-tab-queue__manager-card"
            :title="$t('frosh-tools.tabs.queue.title')"
            :isLoading="isLoading"
            :large="true"
            positionIdentifier="frosh-tools-tab-queue"
    >
        <template #toolbar>
            <div class="frosh-tools-tab-queue__toolbar">
                <mt-button
                        variant="primary"
                        ghost
                        @click="refresh"
                >
                    <mt-icon
                            size="16px"
                            name="regular-undo"
                    ></mt-icon>
                </mt-button>
                <mt-button
                        variant="critical"
                        @click="showResetModal = true"
                >
                    {{ $t('frosh-tools.resetQueue') }}
                </mt-button>
            </div>
        </template>
        <template #grid>
            <sw-data-grid
                    :showSelection="false"
                    :dataSource="queueEntries"
                    :columns="columns"
                    :showActions="false"
            >
            </sw-data-grid>
        </template>
    </mt-card>
    <sw-modal
            v-if="showResetModal"
            :title="$t('frosh-tools.tabs.queue.reset.modal.title')"
            variant="small"
            @modal-close="showResetModal = false"
    >
        {{ $t('frosh-tools.tabs.queue.reset.modal.description') }}
        <template #modal-footer>
            <mt-button
                    @click="showResetModal = false"
                    variant="secondary"
            >
                {{ $t('global.default.cancel') }}
            </mt-button>
            <mt-button
                    variant="critical"
                    @click="resetQueue"
            >
                {{ $t('frosh-tools.tabs.queue.reset.modal.reset') }}
            </mt-button>
        </template>
    </sw-modal>
</sw-card-view>
